# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{py}]
indent_size = 4
max_line_length = 88

[*.{sql}]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{html,xml}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[{package.json,.travis.yml}]
indent_size = 2