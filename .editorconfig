# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Dockerfile
[Dockerfile*]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# HTML/CSS/JS files
[*.{html,css,js,ts}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Environment files
[.env*]
insert_final_newline = false

# Ignore generated files
[*.{log,tmp,temp}]
insert_final_newline = false
trim_trailing_whitespace = false