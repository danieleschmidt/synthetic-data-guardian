# =============================================================================
# Synthetic Data Guardian - Environment Configuration
# =============================================================================

# Application Configuration
NODE_ENV=development
PORT=8080
API_VERSION=v1
LOG_LEVEL=info
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/synthetic_guardian_dev
REDIS_URL=redis://localhost:6379/0
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-character-encryption-key-here
WATERMARK_KEY=your-watermark-secret-key-here
API_RATE_LIMIT=1000
CORS_ORIGIN=http://localhost:3000

# External APIs
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
STABILITY_AI_KEY=your-stability-ai-key
HUGGINGFACE_API_KEY=your-huggingface-token

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=synthetic-data-storage
GCS_PROJECT_ID=your-gcp-project
GCS_BUCKET=synthetic-data-gcs
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_KEY=your-storage-key

# Monitoring & Observability
PROMETHEUS_METRICS_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
SENTRY_DSN=your-sentry-dsn
GRAFANA_URL=http://localhost:3001
LANG_OBSERVATORY_URL=http://localhost:8081

# Generation Configuration
DEFAULT_GENERATOR=sdv
MAX_GENERATION_SIZE=1000000
GENERATION_TIMEOUT=1800
GPU_ENABLED=false
PARALLEL_WORKERS=4

# Validation Settings
STATISTICAL_FIDELITY_THRESHOLD=0.95
PRIVACY_EPSILON_DEFAULT=1.0
PRIVACY_DELTA_DEFAULT=1e-5
BIAS_DETECTION_ENABLED=true
QUALITY_SCORE_THRESHOLD=0.9

# Compliance & Auditing
GDPR_COMPLIANCE_ENABLED=true
HIPAA_COMPLIANCE_ENABLED=false
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_REPORT_FORMAT=pdf
LINEAGE_RETENTION_DAYS=730

# Performance & Scaling
CACHE_TTL=3600
MAX_CONCURRENT_JOBS=10
WORKER_MEMORY_LIMIT=4GB
AUTO_SCALING_ENABLED=false
LOAD_BALANCER_ENABLED=false

# Development & Testing
TESTING_MODE=false
MOCK_EXTERNAL_APIS=false
SEED_DATA_ENABLED=true
DEV_TOOLS_ENABLED=true
HOT_RELOAD=true

# Security Scanning
SNYK_TOKEN=your-snyk-token
CODEQL_ENABLED=true
TRIVY_ENABLED=true
DEPENDENCY_CHECK_ENABLED=true

# Notification & Alerting
SLACK_WEBHOOK_URL=your-slack-webhook
DISCORD_WEBHOOK_URL=your-discord-webhook
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password
ALERT_EMAIL_RECIPIENTS=admin@domain.com,security@domain.com

# Feature Flags
FEATURE_ADVANCED_WATERMARKING=true
FEATURE_DISTRIBUTED_GENERATION=false
FEATURE_REAL_TIME_VALIDATION=true
FEATURE_FEDERATED_LEARNING=false
FEATURE_EDGE_DEPLOYMENT=false

# Docker & Kubernetes
DOCKER_REGISTRY=ghcr.io/your-org
K8S_NAMESPACE=synthetic-guardian
HELM_RELEASE_NAME=synthetic-guardian
KUBECTL_CONTEXT=default

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
DISASTER_RECOVERY_REGION=us-west-2