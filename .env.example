# Synthetic Data Guardian Environment Configuration

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application configuration
APP_NAME=synthetic-data-guardian
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Server configuration
HOST=0.0.0.0
PORT=8080
WORKERS=4

# Security settings
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY_LENGTH=32
SESSION_TIMEOUT=3600

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Primary database for metadata)
DATABASE_URL=postgresql://user:password@localhost:5432/synthetic_guardian
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# Neo4j (Lineage graph database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# Redis (Cache and task queue)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# OBJECT STORAGE
# =============================================================================

# S3-compatible storage for synthetic data and models
STORAGE_BACKEND=s3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=synthetic-data-bucket
S3_ENDPOINT_URL=https://s3.amazonaws.com

# Local storage alternative
LOCAL_STORAGE_PATH=/data/synthetic-guardian

# =============================================================================
# GENERATION BACKENDS
# =============================================================================

# OpenAI API (for text and code generation)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096

# Anthropic Claude API (alternative text generation)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Hugging Face API (for various models)
HUGGINGFACE_API_KEY=hf_your-huggingface-token
HUGGINGFACE_CACHE_DIR=/tmp/huggingface_cache

# Stability AI (for image generation)
STABILITY_API_KEY=sk-your-stability-api-key

# =============================================================================
# SECURITY & WATERMARKING
# =============================================================================

# Cryptographic settings
ENCRYPTION_KEY=32-byte-encryption-key-change-this
WATERMARK_SECRET_KEY=32-byte-watermark-key-change-this
JWT_SECRET_KEY=jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# TLS/SSL settings
TLS_ENABLED=false
TLS_CERT_PATH=/etc/ssl/certs/synthetic-guardian.crt
TLS_KEY_PATH=/etc/ssl/private/synthetic-guardian.key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Jaeger tracing
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Sentry error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Logging configuration
LOG_FORMAT=json
LOG_FILE=/var/log/synthetic-guardian/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE & AUDITING
# =============================================================================

# Audit logging
AUDIT_ENABLED=true
AUDIT_LOG_PATH=/var/log/synthetic-guardian/audit.log
AUDIT_RETENTION_DAYS=2555  # 7 years for compliance

# Privacy settings
DIFFERENTIAL_PRIVACY_ENABLED=true
DEFAULT_EPSILON=1.0
DEFAULT_DELTA=1e-5

# Data retention policies
DATA_RETENTION_DAYS=365
LINEAGE_RETENTION_DAYS=2555
LOGS_RETENTION_DAYS=90

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Celery task queue
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIMEOUT=3600

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Resource limits
MAX_CONCURRENT_GENERATIONS=10
MAX_FILE_SIZE_MB=1000
MAX_DATASET_ROWS=10000000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Testing configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/synthetic_guardian_test
TEST_REDIS_URL=redis://localhost:6379/15

# Development tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Generation features
ENABLE_TABULAR_GENERATION=true
ENABLE_TEXT_GENERATION=true
ENABLE_IMAGE_GENERATION=true
ENABLE_TIMESERIES_GENERATION=true
ENABLE_GRAPH_GENERATION=true

# Validation features
ENABLE_STATISTICAL_VALIDATION=true
ENABLE_PRIVACY_VALIDATION=true
ENABLE_BIAS_DETECTION=true

# Security features
ENABLE_WATERMARKING=true
ENABLE_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true

# API features
ENABLE_REST_API=true
ENABLE_GRAPHQL_API=false
ENABLE_WEBSOCKET_API=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# GitHub integration (for CI/CD)
GITHUB_TOKEN=ghp_your-github-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_CHANNEL=#synthetic-data-alerts

# Email settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true

# =============================================================================
# CLOUD PROVIDER SPECIFIC
# =============================================================================

# AWS-specific settings
AWS_LAMBDA_FUNCTION_NAME=synthetic-data-processor
AWS_BATCH_JOB_QUEUE=synthetic-data-queue
AWS_BATCH_JOB_DEFINITION=synthetic-data-job

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project
GCP_SERVICE_ACCOUNT_KEY_PATH=/etc/gcp/service-account.json
GCP_BUCKET_NAME=synthetic-data-gcp-bucket

# Microsoft Azure
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_KEY=your-storage-key
AZURE_CONTAINER_NAME=synthetic-data-container

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Model configuration
DEFAULT_TABULAR_MODEL=sdv
DEFAULT_TEXT_MODEL=gpt-4
DEFAULT_IMAGE_MODEL=stable-diffusion-xl
MODEL_CACHE_SIZE=10

# Quality thresholds
MIN_STATISTICAL_FIDELITY=0.85
MIN_PRIVACY_SCORE=0.90
MAX_REIDENTIFICATION_RISK=0.05

# Generation parameters
DEFAULT_BATCH_SIZE=1000
DEFAULT_SEED=42
ENABLE_DETERMINISTIC_GENERATION=true

# Validation parameters
VALIDATION_SAMPLE_SIZE=10000
PRIVACY_ATTACK_ITERATIONS=100
BIAS_SIGNIFICANCE_LEVEL=0.05