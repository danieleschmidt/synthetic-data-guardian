# Synthetic Data Guardian - Environment Configuration Template
# Copy this file to .env and configure the values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Secret key for watermarking (generate with: openssl rand -hex 32)
WATERMARK_KEY=your-secret-watermark-key-here

# JWT secret for API authentication (generate with: openssl rand -hex 64)
JWT_SECRET=your-jwt-secret-here

# API rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL - Primary database for application data
DATABASE_URL=postgresql://postgres:password@localhost:5432/synthetic_guardian
DB_HOST=localhost
DB_PORT=5432
DB_NAME=synthetic_guardian
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis - Caching and session storage
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Neo4j - Lineage graph database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# OpenAI API for text generation
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here
OPENAI_MODEL=gpt-4

# Anthropic API for text generation
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# GENERATION DEFAULTS
# =============================================================================
DEFAULT_MAX_RECORDS=100000
DEFAULT_TIMEOUT_MS=300000
DEFAULT_QUALITY_THRESHOLD=0.8
DEFAULT_PRIVACY_THRESHOLD=0.8

# =============================================================================
# FEATURE FLAGS
# =============================================================================
WATERMARKING_ENABLED=true
LINEAGE_TRACKING_ENABLED=true
QUALITY_ASSESSMENT_ENABLED=true
PRIVACY_ANALYSIS_ENABLED=true